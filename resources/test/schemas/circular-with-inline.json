{
  "openapi": "3.0.3",
  "info": {
    "title": "Recursive API",
    "version": "1.0.0"
  },
  "paths": {
    "/nodes/{id}": {
      "get": {
        "summary": "Get a node by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The ID of the node",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "parent": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "parent": {
                          "type": "object"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Node not found"
          }
        }
      }
    }
  }
}

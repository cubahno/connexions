{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Connexions Config Schema",
  "type": "object",
  "properties": {
    "app": {
      "type": "object",
      "description": "Application configuration.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title displayed in the UI."
        },
        "port": {
          "type": "integer",
          "description": "Port number to listen on.",
          "default": 2200
        },
        "homeURL": {
          "type": "string",
          "description": "URL for the UI home page.",
          "default": "/.ui"
        },
        "serviceURL": {
          "type": "string",
          "description": "URL for the service endpoints in the UI.",
          "default": "/.services"
        },
        "contextAreaPrefix": {
          "type": "string",
          "description": "Prefix for area-specific contexts.",
          "default": "in-"
        },
        "disableUI": {
          "type": "boolean",
          "description": "Disable the UI.",
          "default": false
        },
        "historyDuration": {
          "type": "string",
          "description": "Duration to keep request history (e.g., '5m', '1h').",
          "default": "5m"
        },
        "editor": {
          "type": "object",
          "description": "Editor configuration for the UI.",
          "properties": {
            "theme": {
              "type": "string",
              "description": "Editor theme.",
              "default": "chrome"
            },
            "fontSize": {
              "type": "integer",
              "description": "Editor font size.",
              "default": 16
            }
          }
        },
        "storage": {
          "type": "object",
          "description": "Shared storage for distributed features.",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["memory", "redis"],
              "description": "Storage type.",
              "default": "memory"
            },
            "redis": {
              "type": "object",
              "description": "Redis configuration (required when type is 'redis').",
              "properties": {
                "address": {
                  "type": "string",
                  "description": "Redis address (host:port)."
                },
                "password": {
                  "type": "string",
                  "description": "Redis password."
                },
                "db": {
                  "type": "integer",
                  "description": "Redis database number.",
                  "default": 0
                }
              }
            }
          }
        }
      }
    },
    "services": {
      "type": "object",
      "description": "Map of service name to service configuration.",
      "additionalProperties": {
        "$ref": "#/$defs/serviceConfig"
      }
    }
  },
  "$defs": {
    "serviceConfig": {
      "type": "object",
      "description": "Service configuration.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Service name."
        },
        "latency": {
          "type": "string",
          "description": "Fixed latency (e.g., '100ms')."
        },
        "latencies": {
          "type": "object",
          "description": "Percentile-based latencies (e.g., p50: 10ms, p99: 100ms).",
          "additionalProperties": {
            "type": "string"
          }
        },
        "errors": {
          "type": "object",
          "description": "Percentile-based error injection (e.g., p10: 500).",
          "additionalProperties": {
            "type": "integer"
          }
        },
        "validate": {
          "type": "object",
          "properties": {
            "request": {
              "type": "boolean",
              "description": "Validate requests.",
              "default": true
            },
            "response": {
              "type": "boolean",
              "description": "Validate responses.",
              "default": false
            }
          }
        },
        "cache": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "boolean",
              "description": "Cache GET requests.",
              "default": true
            }
          }
        },
        "upstream": {
          "$ref": "#/$defs/upstreamConfig"
        },
        "spec": {
          "type": "object",
          "description": "OpenAPI spec simplification options.",
          "properties": {
            "simplify": {
              "type": "boolean",
              "description": "Enable spec simplification.",
              "default": false
            },
            "optional-properties": {
              "type": "object",
              "properties": {
                "number": {
                  "type": "integer",
                  "description": "Max number of optional properties to keep."
                },
                "range": {
                  "type": "string",
                  "description": "Random range for optional properties (e.g., '1-6')."
                }
              }
            }
          }
        },
        "resources-prefix": {
          "type": "string",
          "description": "Prefix for helper routes outside OpenAPI spec."
        }
      }
    },
    "upstreamConfig": {
      "type": "object",
      "description": "Upstream proxy configuration.",
      "properties": {
        "url": {
          "type": "string",
          "description": "Upstream URL."
        },
        "headers": {
          "type": "object",
          "description": "Headers to add to upstream requests.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "fail-on": {
          "type": "object",
          "description": "Conditions to treat upstream response as failure.",
          "properties": {
            "timeout": {
              "type": "string",
              "description": "Timeout duration (e.g., '5s')."
            },
            "http-status": {
              "type": "array",
              "description": "HTTP status codes to treat as failure.",
              "items": {
                "type": "object",
                "properties": {
                  "exact": {
                    "type": "integer",
                    "description": "Exact HTTP status code."
                  },
                  "range": {
                    "type": "string",
                    "description": "HTTP status range (e.g., '500-599')."
                  }
                }
              }
            }
          }
        },
        "circuit-breaker": {
          "type": "object",
          "description": "Circuit breaker configuration.",
          "properties": {
            "timeout": {
              "type": "string",
              "description": "Time in open state before half-open.",
              "default": "60s"
            },
            "max-requests": {
              "type": "integer",
              "description": "Max requests allowed in half-open state.",
              "default": 1
            },
            "interval": {
              "type": "string",
              "description": "Interval to clear counts in closed state (0 = never).",
              "default": "0s"
            },
            "min-requests": {
              "type": "integer",
              "description": "Min requests before evaluating failure ratio.",
              "default": 3
            },
            "failure-ratio": {
              "type": "number",
              "description": "Failure ratio threshold to trip (0.0-1.0).",
              "default": 0.6,
              "minimum": 0,
              "maximum": 1
            }
          }
        }
      }
    }
  }
}

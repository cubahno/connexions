# =============================================================================
# Connexions Environment Variables
# =============================================================================
# Copy to .env and modify as needed.

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------

# Log level: debug, info, warn, error
# LOG_LEVEL=info

# Log format: "text" for colored dev logs, "json" for structured logs
LOG_FORMAT=text

# HTTP server port
# PORT=2200

# Application root directory (auto-detected if not set)
# APP_DIR=

# -----------------------------------------------------------------------------
# Integration Test Settings
# -----------------------------------------------------------------------------

# Path to custom codegen.yml (overrides generated defaults)
# CODEGEN_CONFIG=

# Path to custom config.yml (overrides generated defaults)
# SERVICE_CONFIG=

# Base directory for spec files
# SPECS_BASE_DIR=testdata/specs

# Randomly select N specs to test (0 = test all specs)
# RANDOM_SPECS=0

# Max parallel service generations
# MAX_CONCURRENCY=8

# Max parallel batches
# BATCH_CONCURRENCY=3

# Target batch size in MB (0 = disable batching, test each spec individually)
# BATCH_SIZE_MB=6

# Skip specs larger than this size in MB
# MAX_SPEC_SIZE_MB=10

# Simplify specs larger than this size in MB (removes unions, limits properties)
# SIMPLIFY_THRESHOLD_MB=3

# Timeout for generating a single service
# SERVICE_GENERATE_TIMEOUT=5m

# Skip specs that passed in previous runs (uses .cache/integration-test-results.json)
# NO_CACHE=false

# Clear the cache before running tests
# CLEAR_CACHE=false

# Stop test run after this many failures
# MAX_FAILS=100

# Max routes to test per spec (empty = test all routes)
# MAX_ROUTES_PER_SPEC=

# Max concurrent route tests per spec
# MAX_ROUTE_CONCURRENCY=10

# Enable debug logging
# DEBUG=false
